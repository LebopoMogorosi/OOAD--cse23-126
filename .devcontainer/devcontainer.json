{
  "name": "Java 17 Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/java:17",
  "customizations": { 
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-java-debug",
        "redhat.java"
      ]
    }
  },
  "postCreateCommand": "java -version && javac -version || true"
}
